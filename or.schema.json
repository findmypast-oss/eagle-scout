            },
            "securityTests": {
              "$ref": "#/definitions/completion"
            }
          },
          "required": [
            "unitTests",
            "integrationTests",
            "criticalPathTests",
            "stressTests",
            "chaosDays",
            "securityTests"
          ]
        },
        "localDevExperience": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "automatedSetup": {
              "$ref": "#/definitions/completion"
            },
            "debugging": {
              "$ref": "#/definitions/completion"
            }
          },
          "required": [
            "automatedSetup",
            "debugging"
          ]
        },
        "deploymentAndRelease": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "featureToggles": {
              "$ref": "#/definitions/completion"

  "definitions": {
    "completion": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "completed": {
          "type": "boolean",
          "description": "Requirement completed?"
        },
        "moreInfo": {
          "type": "string",
          "minLength": 3,
          "description": "More info on this requirement"
        }
      },
      "required": [
        "completed"
      ]
    }

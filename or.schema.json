    },
    "serviceName": {
      "type": "string",
      "description": "Name of the service"
    },
    "or": {
      "type": "object",
      "additionalProperties": false,
      "description": "Operational requirements",
      "properties": {
        "slo": {
          "type": "object",
          "additionalProperties": false,
          "properties": {

          "type": "object",
          "additionalProperties": false,
          "properties": {
            "handleUpstreamFailures": {
              "$ref": "#/definitions/completion"
            },
            "failoverRedundancy": {
              "$ref": "#/definitions/completion"
            },
            "horizontalScaling": {
              "$ref": "#/definitions/completion"
            },
            "featureTogglesAroundNonEssentialFeatures": {
              "$ref": "#/definitions/completion"
